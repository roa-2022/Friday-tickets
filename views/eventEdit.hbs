<div class="event-container">
  <div class="single-event">
    <form action="/event/{{id}}/edit" method="POST">

    <div class="event-title-container">
      <label for="eventTitle">Title: </label>
      <input type="text" value='{{event_name}}  'id="eventTitle" name="eventTitle">
    </div>

     <div class="input-container">
      <label for="location">Location: </label>
        <select id="locationId" name="locationId">
          {{#each locations}}
          <option value="{{id}}">{{name}}</option>
          {{/each}}
        </select>
      </div>

    <div class="input-container">
      <label for="eventDate">Date: </label>
      <input type="text" value='{{date}}' id="eventDate" name="eventDate">
    </div>

    <div class="input-description-container">
        <label for="eventDescription">Event Description: </label>
        <textarea rows="13" type="text" id="eventDescription" name="eventDescription">{{description}}</textarea>
    </div> 
    <div class="button-container">
      <button type="submit" >Submit</button>
    </div>

    </form>
  </div>
    </div>
